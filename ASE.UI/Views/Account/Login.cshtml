@using ASE.Models
@using ASE.UI;
@model LoginViewModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="bg-login" class="background"></div>
<div class="fader center-table">
	<div class="center-cell">
		<div class="page-container width300 margin-auto secondary-color-bg">
			<h2>Log in</h2>
			<div>
				@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
				{
					@Html.AntiForgeryToken()
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<div class="input-group clearfix">
						<div class="input-group-addon relative">
							<div class="center-table">
								<div class="center-cell">
									<div id="envelope-color" class="menu-icon margin-auto">E</div>
								</div>
							</div>
						</div>
						<input name="Email" type="email" placeholder="Email" />
					</div>
					<div class="input-group clearfix">
						<div class="input-group-addon relative">
							<div class="center-table">
								<div class="center-cell">
									<div id="key-color" class="menu-icon margin-auto">P</div>
								</div>
							</div>
						</div>
						<input name="Password" type="password" placeholder="Password" />
					</div>
					<div class="field">
						<input type="submit" class="btn btn-large" value="Continue" />
					</div>
				}
			</div>
		</div>
	</div>
</div>