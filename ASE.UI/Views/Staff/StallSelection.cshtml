@using ASE.Common
@model List<ASE.Entities.StallEntity> 

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

	<div class="center-table">
		<div class="center-cell">
			<div id="landing" class="margin-auto width760 height-full scroll">
				<h1 class="text-center noselect primary-color whitespace">Your</h1>
				<h1 class="text-center noselect primary-color underline">stalls</h1>
				<div class="margin-top-large">
					<a href="~/Staff/CreateStall" class="btn btn-large">Create Stall</a>
					<a href="~/Staff/Users" class="btn btn-large">Manage Staff</a>
					<a href="~/Browse/" class="btn btn-large">Browse as User</a>
				</div>
				<div class="text-center margin-top-large relative">
					@for (int i = 0; i < Model.Count; i++)
					{
						var img = (Model[i].Logo != null) ? String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model[i].Logo)) : "";
						<div class="browse-item" onclick="location.href='/Staff/Stall?StallId=@Model[i].ID'">
							<div class="browse-img">
								<img src="@img" />
							</div>
							<div class="browse-text">
								<a><h5>@Model[i].Name</h5></a>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>