						<div class="input-group-addon relative">
							<div class="center-table">
								<div class="center-cell">
									<div id="envelope-color" class="menu-icon margin-auto">N</div>
								</div>
							</div>
						</div>
						<input id="Name" name="Name" type="text" placeholder="Name" />
					</div>
					<div class="input-group clearfix">
						<div class="input-group-addon relative">
							<div class="center-table">
								<div class="center-cell">
									<div id="envelope-color" class="menu-icon margin-auto">D</div>
								</div>
							</div>
						</div>
						<input name="Description" type="text" placeholder="Description" />
					</div>
					@*<div class="input-group clearfix">
						<div class="input-group-addon relative">
							<div class="center-table">
								<div class="center-cell">
									<div id="envelope-color" class="menu-icon margin-auto">I</div>
								</div>
							</div>
						</div>
						<input name="Logo" type="file" />
					</div>*@
					<div class="field">
						<input type="submit" class="btn btn-large" value="Create" />
					</div>
				}
			</div>
		</div>
	</div>
</div>