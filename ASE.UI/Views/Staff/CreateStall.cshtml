@using ASE.BL
@model Stall

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="bg-login" class="background"></div>
<div class="fader center-table">
	<div class="center-cell">
		<div class="page-container width300 margin-auto secondary-color-bg">
			<h2>Create Stall</h2>
			<div>
				@using (Html.BeginForm("CreateStall", "Staff", FormMethod.Post))
